<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileApp.Views.ScanQRCodePage" 
             BindingContext="{Binding Main, Source={StaticResource Locator}}"
             Title="Scan QRCode">
    <ContentPage.Content>
        <StackLayout Padding="8" BindingContext="{Binding Scan}">
            <Label Text="Please Scan the QRCode" HorizontalTextAlignment="Center"/>
            <Button Text="Scan" Command="{Binding ScanCommand}" VerticalOptions="EndAndExpand"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>